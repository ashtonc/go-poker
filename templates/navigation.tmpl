{{ define "navigation" -}}
			{{ with .Session -}}
			<ul id="navigation-list">
				<li{{ if .PageHome }} class="current">{{ else }}>{{ end }}<a href="/poker/">Home</a></li>
				<li{{ if .PageGame }} class="current">{{ else }}>{{ end }}<a href="/poker/game/">Play</a></li>
				<li{{ if .PageLeaderboard }} class="current">{{ else }}>{{ end }}<a href="/poker/leaderboard/">Leaderboards</a></li>
			</ul>
			{{ if .LoggedIn -}}
			<div id="user-link">
				Welcome, <a href="/poker/user/{{ .Username }}">{{ .Name }}</a>.
			</div>
			{{- else -}}
			<a href="/poker/register/">Register</a>
			{{- end }}
			{{- end }}
{{- end }}
