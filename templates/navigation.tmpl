{{ define "navigation" -}}
		{{ $siteroot := .SiteRoot -}}
		<div id="navigation">
			{{ with .Session -}}
			<ul>
				<li{{ if .PageHome }} class="nav-current">{{ else }}>{{ end }}
					<a href="{{ $siteroot }}/">Home</a>
				</li>
				<li{{ if .PageGame }} class="nav-current">{{ else }}>{{ end }}
					<a href="{{ $siteroot }}/game/">Play</a>
				</li>
				<li{{ if .PageLeaderboard }} class="nav-current">{{ else }}>{{ end }}
					<a href="{{ $siteroot }}/leaderboard/">Leaderboard</a>
				</li>
				<li{{ if .PageUser }} class="nav-current"{{ end }}>
					{{ if .LoggedIn -}}<a href="{{ $siteroot }}/user/{{ .Username }}/view">Profile{{ else }}<a href="{{ $siteroot }}/register/">Register{{ end }}</a>
				</li>
			</ul>
			{{- end }}
		</div>
{{- end }}
