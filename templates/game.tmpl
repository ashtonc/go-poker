{{ define "game" -}}
		{{ $siteroot := .SiteRoot -}}
		{{ with .GameListing -}}
        <h1>{{ .Name }}</h1>
		{{ with .Game -}}
		{{ $deckSize := len .Deck }}
		<div id="game">
			<div id="game-info">
				<div id="deck">Cards: {{ $deckSize }}</div>
				<div id="pot">{{ .Pot }}</div>
			</div>
			{{ range .Seats -}}
			<div class="seat player-{{ .Number }} {{ if .Occupied }}occupied{{ else }}empty{{ end }}">
				{{ if .Occupied}}
				{{ with .Occupier -}}
				<div class="player-info">
					<div class="image"><img src="{{ $siteroot }}/assets/img/{{ .PictureSlug }}"></div>
					<div class="name"><a href="{{ $siteroot }}/user/{{ .Username }}/view">{{ .Username }}</a></div>
					<div class="stack">{{ .Money }}</div>
				</div>
				<div class="hand">
					{{ range $index, $hand := .Hand -}}
					<div class="card card-{{ $index }} {{ .Face }} {{ .Suit }}"></div>
					{{- end }}
				</div>
				{{ end }}
				{{ else }}
				<div class="player-info">
					<div class="image"></div>
					<div class="name"></div>
					<div class="stack"></div>
				</div>
				<div class="hand">
					<div class="card card-1 none"> </div>
					<div class="card card-2 none"></div>
					<div class="card card-3 none"></div>
					<div class="card card-4 none"></div>
					<div class="card card-5 none"></div>
				</div>
				{{ end }}
				<div class="timer"></div>
			</div>
			{{ end -}}
		</div>
		{{- end }}
		{{- end }}
{{- end }}
